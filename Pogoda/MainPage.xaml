<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pogoda.MainPage"
             Shell.BackgroundColor="#1E1E1E"
             Shell.TitleColor="#FFD700"
             BackgroundColor="#121212">

    <ScrollView BackgroundColor="#121212">
        <VerticalStackLayout Spacing="25" Padding="20" HorizontalOptions="Center">

            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                <Label x:Name="lblMiasto" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#FFD700"
                       VerticalOptions="Center"/>
                <Image x:Name="imgPogoda" 
                       WidthRequest="60" 
                       HeightRequest="60"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Frame BackgroundColor="#1E1E1E" 
                   CornerRadius="15" 
                   HasShadow="True"
                   HorizontalOptions="Center">
                <Label x:Name="lblWynik" 
                       FontSize="18" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin= "0,5,0,0"/>
            </Frame>

            <Label Text="Prognoza na 24 godziny" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#FFD700"
                   HorizontalOptions="Center"/>

            <Grid RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#1E1E1E" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Grid.Column="0" Grid.Row="0" Grid.RowSpan="3">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label x:Name="lbl00" 
                               Text="9:00" 
                               FontSize="16" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Image x:Name="img00" 
                               Source="http://openweathermap.org/img/wn/10d.png" 
                               WidthRequest="50" 
                               HeightRequest="50"
                               HorizontalOptions="Center"/>
                        <Label x:Name="lblTemp00" 
                               Text="15 °C" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#1E1E1E" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Grid.Column="1" Grid.Row="0" Grid.RowSpan="3">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label x:Name="lbl10" 
                               Text="12:00" 
                               FontSize="16" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Image x:Name="img10" 
                               Source="http://openweathermap.org/img/wn/10d.png" 
                               WidthRequest="50" 
                               HeightRequest="50"
                               HorizontalOptions="Center"/>
                        <Label x:Name="lblTemp10" 
                               Text="16 °C" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#1E1E1E" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label x:Name="lbl20" 
                               Text="15:00" 
                               FontSize="16" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Image x:Name="img20" 
                               Source="http://openweathermap.org/img/wn/10d.png" 
                               WidthRequest="50" 
                               HeightRequest="50"
                               HorizontalOptions="Center"/>
                        <Label x:Name="lblTemp20" 
                               Text="17 °C" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#1E1E1E" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Grid.Column="3" Grid.Row="0" Grid.RowSpan="3">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label x:Name="lbl30" 
                               Text="18:00" 
                               FontSize="16" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Image x:Name="img30" 
                               Source="http://openweathermap.org/img/wn/10d.png" 
                               WidthRequest="50" 
                               HeightRequest="50"
                               HorizontalOptions="Center"/>
                        <Label x:Name="lblTemp30" 
                               Text="18 °C" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>